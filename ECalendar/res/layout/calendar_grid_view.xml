<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell"
    android:layout_width="@dimen/date_cell_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/left_margin"
    android:paddingTop="@dimen/top_margin" >

    <TextView
        android:id="@+id/holiday_mark"
        android:layout_width="@dimen/holiday_mark_width"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:text=""
        android:textSize="@dimen/holiday_mark_text" >
    </TextView>

    <TextView
        android:id="@+id/major_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_height"
        android:gravity="center"
        android:text="@string/blank" >
    </TextView>

    <TextView
        android:id="@+id/minor_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/minor_height"
        android:text="@string/blank" >
    </TextView>

</LinearLayout>